<% provide(:title, 'Sign up')%>
<h1>Sign up</h1>

<%= form_for @user, html: {multipart: true} do |f| %>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %><br /><br />
	</div>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %><br /><br />
	</div>
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %><br /><br />
	</div>
	<div class="field">
		<%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation %><br /><br />
	</div>
	<div class="field">
		<%= f.label "Choose a photo:" %><br />
		<%= f.file_field :avatar %><br /><br />
	</div>
	<div class="actions">
		<%= f.submit "Sign up"%>
	</div>

<% end %>
	