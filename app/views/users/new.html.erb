<% provide(:title, 'Sign up')%>
<h1>Sign up</h1>

<div class="row">
	<div class="span6 offset3">
	<%= form_for @user, html: {multipart: true} do |f| %>
	<%= render 'shared/error_messages'%>
		
		<h6>
		<%= f.label :name, "Username", class: "engravedtext" %>
		<%= f.text_field :name %>
		</h6>

		<h6>
		<%= f.label :email, "Valid Email", class: "engravedtext" %>
		<%= f.text_field :email %>
		</h6>
		
		<h6>
		<%= f.label :password, class: "engravedtext" %>
		<%= f.password_field :password %>
		</h6>
		
		<h6>
		<%= f.label :password_confirmation, "Confirmation", class: "engravedtext" %>
		<%= f.password_field :password_confirmation %>
		</h6>

		<%= f.label "Choose a photo:", class: "engravedtext", style: "font-weight: bold; font-size: 17px"%>
		<%= f.file_field :avatar %>

		<%= f.submit "Create my account", class: "btn btn-large btn-primary " %>

<% end %>
</div>
</div>