<%= @user.name %> , <%= @user.email %>

<% provide :title, @user.name %>
<table class="profile">
	<tr>
		<td>
			<h1>
			<%= image_tag @user.avatar.url(:thumb)%>
			<%= gravatar_for @user %>
			<%= @user.name %>
			</h1>
		</td>
		<td class="sidebar round">
			<strong>Name</strong> <%= @user.name%><br />
			<strong>URL</strong> <%= link_to user_path(@user), @user%>
		</td>
	</tr>		
</table>
